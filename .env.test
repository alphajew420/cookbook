# Test Environment Variables
NODE_ENV=test
PORT=3001

# Test Database (use a separate test database!)
DATABASE_URL=postgresql://postgres:password@localhost:5432/cookbook_test
DB_POOL_MIN=1
DB_POOL_MAX=5

# Test Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT (test secrets)
JWT_SECRET=test-secret-key-for-testing-only-min-32-characters
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=test-refresh-secret-key-for-testing-only
REFRESH_TOKEN_EXPIRATION=7d

# Mock Gemini (tests should mock this)
GEMINI_API_KEY=test-key
GEMINI_MODEL=gemini-1.5-pro

# Mock AWS (tests should mock this)
AWS_ACCESS_KEY_ID=test-key
AWS_SECRET_ACCESS_KEY=test-secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=test-bucket

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=10000
SCAN_COOKBOOK_LIMIT=100
SCAN_FRIDGE_LIMIT=100

# Image Upload
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Logging
LOG_LEVEL=error

# CORS
CORS_ORIGIN=http://localhost:3001
